<Page x:Class="AWCF.WebPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AWCF"
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
	  xmlns:Controls="clr-namespace:Microsoft.Toolkit.Wpf.UI.Controls;assembly=Microsoft.Toolkit.Wpf.UI.Controls.WebView"
	  mc:Ignorable="d"
      Title="WebPage">

	<DockPanel>
		<DockPanel DockPanel.Dock="Top" >
			<Button x:Name="ButtonGo" DockPanel.Dock="Right" Click="ButtonGo_Click" Content="Go"/>
			<TextBox Name = "addressBar" Text="https://www.yahoo.co.jp/"/>
		</DockPanel>
		<Controls:WebView  Name = "webView" 
										Source = "https://www.yahoo.co.jp/" 
										  />
		<!--
												VerticalAlignment="Stretch" 
										HorizontalAlignment="Stretch" 
										Width="365" Height="205"
										 Margin="0,0,0,0"
		<wv2:WebView2 Name = "webView"
										 MinHeight="375" MinWidth="640"
                  Source = "https://www.yahoo.co.jp/" Margin="0,0,0,0" Width="474"/>-->
	</DockPanel>
</Page>
